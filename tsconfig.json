{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist", "front"]
}
